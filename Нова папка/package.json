{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User service for managing users in a NestJS application",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "mongoose": "^6.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.8",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.2.0",
    "ts-jest": "^29.1.3",
    "typescript": "^4.9.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"]
  },
  "author": "",
  "license": "ISC"
}
